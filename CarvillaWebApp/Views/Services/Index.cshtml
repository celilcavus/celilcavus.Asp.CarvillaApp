@model Services

<div class="container">
    <form asp-action="Index" asp-controller="Services" method="post" enctype="multipart/form-data">
        <div class="row mt-2">
            <div class="col-12">
                <label class="col-form-label">Select File</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <br />
                <label class="col-form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                <br />
                <label class="col-form-label">Description</label>
                <textarea asp-for="Description" class="form-control w-100" style="height:300px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <br />
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive" type="checkbox" value="" id="flexCheckIndeterminate">
                    <label class="form-check-label" for="flexCheckIndeterminate">
                        Is Active
                    </label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Upload File</button>
    </form>
</div>