@model Clients

<div class="container">
    <form asp-action="Index" asp-controller="Clients" method="post" enctype="multipart/form-data">
        <div class="row mt-2">
            <div class="col-12">
                <label class="col-form-label">Select File</label>
                <input asp-for="Image" class="form-control" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>

                <br />

                <label class="col-form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <br />

                <label class="col-form-label">LastName</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>

                <br />

                <label class="col-form-label">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>

                <br />

                <label class="col-form-label">Description</label>
                <textarea asp-for="Description" class="form-control w-100" style="height:200px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>

                <br />

                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive" type="checkbox" value="" id="flexCheckIndeterminate">
                    <label class="form-check-label" for="flexCheckIndeterminate">
                        Is Active
                    </label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
</div>



